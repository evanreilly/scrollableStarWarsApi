<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp" >
        <TextView
            android:id="@+id/text_view_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Last"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:layout_toStartOf="@id/text_view_priority"
            android:layout_toLeftOf="@id/text_view_priority"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

<!--            /> //name height mass birth year-->
        <TextView
            android:id="@+id/text_view_height_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_name"
            android:text="Height: "/>
        <TextView
            android:id="@+id/text_view_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_view_height_label"
            android:layout_below="@+id/text_view_name"
            android:text="123"/>
        <TextView
            android:id="@+id/text_view_mass_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_height"
            android:text="Mass: "/>
        <TextView
            android:id="@+id/text_view_mass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_view_height_label"
            android:layout_below="@+id/text_view_height"
            android:text="123"/>
        <TextView
            android:id="@+id/text_view_birth_year_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_mass"
            android:text="Birth Year: "/>
        <TextView
            android:id="@+id/text_view_birth_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_view_birth_year_label"
            android:layout_below="@+id/text_view_mass_label"
            android:text="123"/>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>